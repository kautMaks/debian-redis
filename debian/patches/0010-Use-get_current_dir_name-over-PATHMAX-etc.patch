diff --git a/src/rdb.c b/src/rdb.c
index ee9418c..e8f2ee0 100644
--- a/src/rdb.c
+++ b/src/rdb.c
@@ -1313,7 +1313,6 @@ werr: /* Write error. */
 /* Save the DB on disk. Return C_ERR on error, C_OK on success. */
